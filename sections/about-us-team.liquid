<style>
  .about-us-team {
    padding: 60px 20px;
    text-align: center;
    background-color: #f8f8f8;
  }
  .about-us-team__grid {
    display: flex;
    justify-content: center;
    gap: 30px;
    flex-wrap: wrap;
  }
  .about-us-team__member {
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    padding: 30px;
    width: 300px;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
  }
  .about-us-team__member-image {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 20px;
  }
  .about-us-team__member-name {
    font-size: 1.8em;
    margin-bottom: 10px;
  }
  .about-us-team__member-social {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-bottom: 15px;
  }
  .about-us-team__member-social a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background-color: #eee;
    color: #333;
    text-decoration: none;
    font-size: 1.2em;
  }
  .about-us-team__member-social img {
    width: 20px;
    height: 20px;
  }
  .about-us-team__member-description {
    font-size: 0.95em;
    line-height: 1.5;
    margin-top: 15px;
  }
  .about-us-team__careers {
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    padding: 30px;
    width: 300px;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .about-us-team__careers-title {
    font-size: 1.8em;
    margin-bottom: 15px;
  }
  .about-us-team__careers-link {
    display: inline-block;
    background-color: #007bff;
    color: #fff;
    padding: 10px 20px;
    border-radius: 5px;
    text-decoration: none;
    font-size: 1em;
    transition: background-color 0.3s ease;
  }
  .about-us-team__careers-link:hover {
    background-color: #0056b3;
  }
</style>

<div class="about-us-team">
  <div class="about-us-team__grid">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'team_member' %}
          <div class="about-us-team__member" style="background-color: {{ block.settings.background_color }};">
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | image_url: width: 240 }}" alt="{{ block.settings.name }}" class="about-us-team__member-image" width="120" height="120">
            {% endif %}
            <h3 class="about-us-team__member-name" style="color: {{ block.settings.text_color }};">{{ block.settings.name }}</h3>
            <div class="about-us-team__member-social">
              {% if block.settings.linkedin_url != blank and block.settings.linkedin_icon != blank %}
                <a href="{{ block.settings.linkedin_url }}" target="_blank">
                  <img src="{{ block.settings.linkedin_icon | image_url: width: 20 }}" alt="LinkedIn" width="20" height="20">
                </a>
              {% endif %}
              {% if block.settings.website_url != blank and block.settings.website_icon != blank %}
                <a href="{{ block.settings.website_url }}" target="_blank">
                  <img src="{{ block.settings.website_icon | image_url: width: 20 }}" alt="Website" width="20" height="20">
                </a>
              {% endif %}
              {% if block.settings.instagram_url != blank and block.settings.instagram_icon != blank %}
                <a href="{{ block.settings.instagram_url }}" target="_blank">
                  <img src="{{ block.settings.instagram_icon | image_url: width: 20 }}" alt="Instagram" width="20" height="20">
                </a>
              {% endif %}
            </div>
            <p class="about-us-team__member-description" style="color: {{ block.settings.text_color }};">{{ block.settings.description }}</p>
          </div>
        {% when 'careers' %}
          <div class="about-us-team__careers" style="background-color: {{ block.settings.background_color }};">
            <h3 class="about-us-team__careers-title" style="color: {{ block.settings.text_color }};">{{ block.settings.title }}</h3>
            {% if block.settings.button_label != blank and block.settings.button_link != blank %}
              <a href="{{ block.settings.button_link }}" class="about-us-team__careers-link">{{ block.settings.button_label }}</a>
            {% endif %}
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "About Us Team",
  "blocks": [
    {
      "type": "team_member",
      "name": "Team Member",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Team Member Name"
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Background Color",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#333333"
        },
        {
          "type": "image_picker",
          "id": "linkedin_icon",
          "label": "LinkedIn Icon"
        },
        {
          "type": "url",
          "id": "linkedin_url",
          "label": "LinkedIn URL"
        },
        {
          "type": "image_picker",
          "id": "website_icon",
          "label": "Website Icon"
        },
        {
          "type": "url",
          "id": "website_url",
          "label": "Website URL"
        },
        {
          "type": "image_picker",
          "id": "instagram_icon",
          "label": "Instagram Icon"
        },
        {
          "type": "url",
          "id": "instagram_url",
          "label": "Instagram URL"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Description of the team member.</p>"
        }
      ]
    },
    {
      "type": "careers",
      "name": "Careers Block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Join The Team"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "View Openings"
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Background Color",
          "default": "#f0f0f0"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#333333"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Us Team"
    }
  ]
}
{% endschema %}