{% schema %}
{
  "name": "Product List",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Bestsellers"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Product List",
      "blocks": []
    }
  ]
}
{% endschema %}

{% style %}
  .product-list-heading {
    font-size: 40px;
    font-weight: 400;
    text-align: left;
    margin-bottom: 30px;
    color: rgb(4, 120, 137);
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 24px;
  }

  .product-card {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 12px;
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.04);
    padding: 18px 12px 20px 12px;
    align-items: stretch;
    justify-content: flex-start;
  }

  .product-size-quantity-row {
    display: flex;
    gap: 16px;
    align-items: center;
    justify-content: center;
    margin-top: 10px;
    margin-bottom: 0;
    flex-wrap: wrap;
  }
  .product-size-options label {
    margin-right: 4px;
    font-size: 14px;
    color: #444;
  }
  .product-size-options select {
    width: 50%;
    min-width: 50px;
    max-width: 150px;
    padding: 6px 10px;
    border-radius: 4px;
    border: 1px solid #ccc;
    font-size: 14px;
    background: #fafbfc;
  }
  .product-quantity {
    min-width: 90px;
    max-width: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .quantity-adjuster {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .quantity-adjuster button {
    border: 1px solid #ccc;
    color: #333;
    font-size: 1.2rem;
    font-weight: 600;
    padding: 8px;
    cursor: pointer;
    transition: background-color 0.2s;
    min-width: 28px;
    text-align: center;
    height: 100%;
  }

  .quantity-adjuster button:hover {
    background-color: #ddd;
  }

  .qty-left {
    border-radius: 4px 0px 0px 4px;
  }

  .qty-right {
    border-radius: 0px 4px 4px 0px;
  }

  .product-price-atc-row {
    display: flex;
    gap: 16px;
    align-items: center;
    justify-content: center;
    margin-top: 16px;
    margin-bottom: 0;
    flex-wrap: wrap;
  }
  .product-price {
    font-size: 1.3rem;
    font-weight: 600;
    color: #047889;
    min-width: 90px;
    text-align: right;
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }
  .btn-bestseller {
    margin-top: 0;
    min-width: 120px;
    max-width: 180px;
    padding: 10px 0;
    background-color: #007a8c;
    color: white;
    font-weight: 600;
    border: none;
    cursor: pointer;
    border-radius: 6px;
    font-size: 1rem;
    transition: background 0.2s;
    flex: 1 1 120px;
  }
  .btn-bestseller:hover {
    background-color: #333;
  }

  @media screen and (max-width: 1024px) {
    .product-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    .product-card {
      padding: 14px 6px 16px 6px;
    }
  }
  @media screen and (max-width: 600px) {
    .product-grid {
      display: flex;
      flex-wrap: wrap;
      padding-bottom: 1rem;
    }
    .product-card {
      width: 100%; /* Adjust as needed */
      flex: 0 0 auto;
    }
    .product-size-quantity-row,
    .product-price-atc-row {
      flex-direction: column;
      gap: 8px;
      align-items: stretch;
    }
    .product-card {
      padding: 10px 2px 12px 2px;
    }
    .btn-bestseller {
      width: 100%;
      min-width: 0;
      max-width: none;
    }
    .product-price {
      justify-content: flex-start;
      text-align: left;
    }
  }

  .product-card img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    border-radius: 8px;
    border: 1px solid #e5e5e5;
  }

  .product-card img:hover {
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    transition: box-shadow 0.3s ease;
  }

  .product-card a {
    text-decoration: none;
  }

  .product-title {
    font-size: 16px;
    font-weight: 500;
    color: #111;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .product-card .product-title {
    transition: transform 0.3s ease, color 0.3s ease;
  }

  .product-card:hover .product-title {
    transform: scale(1.05);
    color: rgb(4, 120, 137);
  }

  @media screen and (max-width: 768px) {
    .product-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 480px) {
    .product-grid {
      grid-template-columns: 1fr;
    }
  }

  .variant-qty-row,
  .price-atc-row {
    display: flex;
    justify-content: space-between;
    gap: 10px;
    margin-top: 10px;
    align-items: center;
  }

  .variant-select {
    flex: 1;
    padding: 8px;
    border-radius: 4px;
    border: 1px solid #ccc;
  }

  .qty-input {
    width: 50px;
    padding: 8px;
    text-align: center;
    border: 1px solid #ccc;
  }

  .btn-bestseller {
    flex-shrink: 0;
    padding: 10px;
    background-color: #007a8c;
    color: white;
    font-weight: 600;
    border: none;
    cursor: pointer;
    border-radius: 6px;
  }

  .btn-bestseller:hover {
    background-color: #333;
  }

  .product-price {
    font-weight: 600;
    font-size: 16px;
    color: #111;
  }

  [cart-animator-animate] .product-card button[data-product-id],
  [cart-animator-animate] .product-card form[action*='/cart/add'] [type='submit'] {
    animation: none !important;
    -webkit-animation: none !important;
    animation-name: none !important;
    -webkit-animation-name: none !important;
  }
{% endstyle %}

<div class="page-width product-list-section">
  <h2 class="product-list-heading">{{ section.settings.heading }}</h2>

  {% if section.blocks.size > 0 %}
    <div class="product-grid">
      {% for block in section.blocks %}
        {% assign product = block.settings.product %}
        {% if product %}
          <div class="product-card">
            <form method="post" action="/cart/add">
              <input type="hidden" name="form_type" value="product">
              <input type="hidden" name="utf8" value="✓">

              <!-- Product Image + Title -->
              <a href="{{ product.url }}">
                <img
                  src="{{ product.featured_image | img_url: '500x500' }}"
                  alt="{{ product.title }}"
                  width="500"
                  height="500"
                  loading="lazy"
                >
              </a>
              <div class="product-title">{{ product.title }}</div>

              <!-- Variant & Quantity Row -->
              <div class="variant-qty-row">
                <select name="id" class="variant-select">
                  {% for variant in product.variants %}
                    {% if variant.available %}
                      <option
                        value="{{ variant.id }}"
                        data-price="{{ variant.price | money_without_currency | replace: ',', '' }}"
                      >
                        {{ variant.title }}
                      </option>
                    {% else %}
                      <option disabled>{{ variant.title }} - Sold Out</option>
                    {% endif %}
                  {% endfor %}
                </select>

                <div class="quantity-adjuster">
                  <button class="qty-left" type="button" data-action="decrease">-</button>
                  <input type="number" name="quantity" class="qty-input" value="1" min="1">
                  <button class="qty-right" type="button" data-action="increase">+</button>
                </div>
              </div>

              <!-- Price & Add to Cart Row -->
              <div class="price-atc-row">
                <div class="product-price">{{ product.price | money }}</div>
                <button type="submit" class="btn-bestseller" data-product-id="{{ product.id }}">Add to Cart</button>
              </div>
            </form>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  {% else %}
    <p>No products selected.</p>
  {% endif %}
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    document.querySelectorAll('.product-card').forEach(function (card) {
      const select = card.querySelector('select.variant-select');
      const qty = card.querySelector('input.qty-input');
      const priceEl = card.querySelector('.product-price');
      if (!select || !qty || !priceEl) return;

      const updatePrice = () => {
        const option = select.options[select.selectedIndex];
        const unitPrice = parseFloat(option.dataset.price || 0);
        const quantity = parseInt(qty.value || 1);
        const total = (unitPrice * quantity).toFixed(2);
        priceEl.textContent = `₹${total}`;
      };

      select.addEventListener('change', updatePrice);
      qty.addEventListener('input', updatePrice);
      card.querySelectorAll('.quantity-adjuster button').forEach((button) => {
        button.addEventListener('click', () => {
          let quantity = parseInt(qty.value || 1);
          const action = button.dataset.action;
          if (action === 'increase') {
            quantity++;
          } else if (action === 'decrease' && quantity > 1) {
            quantity--;
          }
          qty.value = quantity.toString();
          updatePrice();
        });
      });
    });
  });
</script>
